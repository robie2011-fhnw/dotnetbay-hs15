        <DatePicker x:Name="dateEnd" Grid.Column="1" HorizontalAlignment="Left" Margin="90.8,121.6,0,0" Grid.Row="3" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="178" RenderTransformOrigin="0.493,0.387"/>
        <Button x:Name="btnOpenDialog" Content="..." Grid.Column="2" HorizontalAlignment="Left" Margin="228,150,0,0" Grid.Row="3" VerticalAlignment="Top" Width="26" RenderTransformOrigin="-0.117,-0.468" Click="ShowFileDialog" />

    </Grid>
