        <Label x:Name="label" Content="Add New Auction" HorizontalAlignment="Left" Margin="15,14,-0.4,20.669" Grid.RowSpan="3" Width="279" Grid.ColumnSpan="3"/>
        <Label x:Name="label1" Content="Title" Margin="15,31.6,0.4,0.4" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
